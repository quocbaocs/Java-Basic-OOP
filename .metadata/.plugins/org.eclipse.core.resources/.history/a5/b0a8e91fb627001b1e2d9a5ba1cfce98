package week2_bai2;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Sinhvien a = new Sinhvien(123,"123123", 5,7);
		System.out.println(a);
		
		Sinhvien b = new Sinhvien();
		
		nhapSV(b);
		
		System.out.println(b);
	}
	
	public static Sinhvien nhapSV(Sinhvien a) {
		Scanner sc = new Scanner(System.in);
		

		
		System.out.println("Nhap vao MSSV:");
		a.ms = sc.nextInt();
		System.out.println("Nhap vao ten SV: ");
		ten=sc.nextLine();
		System.out.println("Nhap vao diem LT: ");
		diemLT = sc.nextFloat();
		System.out.println("Nhap vao diem TH: ");
		diemTH = sc.nextFloat();
		
		return a;
	}

}
